<%= form_for @user, url:{action:'create'} do |f| %>
	<div class="form-group">
		<div class="form-row">
			<div class="col">
				<%= f.label :Username%>
				<%= f.text_field :username, class: 'form-control'%>
			</div>
			<div class="col">
				<%= f.label :Password%>
				<%= f.password_field :password, class: 'form-control'%>
			</div>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :Email%>
		<%= f.text_field :email, class: 'form-control'%>
	</div>
	<div class="form-group">
		<%= f.label :Full_Name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.check_box :isAdmin %>
		<%= f.label :Im_An_Admin %>
	</div>
	<%= f.submit :Signup, class: 'btn btn-primary text-center'%>
<% end %>
