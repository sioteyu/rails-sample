.row
	= render 'sidenav'
	.col-md-10
		.container
			%table.table
				%tr
					%th Name
					%th Username
					%th Email
					%th User Type
					%th Actions

				- @users.each do |user|
					%tr{id: 'user-'+user.id.to_s}
						%td
							= user.name
						%td>
							= user.username
						%td
							= user.email
						- if user.isAdmin
							%td Admin
						- else
							%td User
						%td
							= link_to 'Delete', user_delete_path(u_id:user.id), method: :delete,class: 'btn btn-outline-danger', remote: true
			= link_to 'Go Back', :back, class: 'btn btn-secondary'
