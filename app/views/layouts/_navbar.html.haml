%nav.navbar.navbar-expand-lg.navbar-light.nav-bg
  %a.navbar-brand{href: "/"} Navbar
  %button.navbar-toggler{{"type": "button", "data-toggle": "collapse", "data-target": "#navbarSupportedContent"}}
    %span.navbar-toggler-icon

  .collapse.navbar-collapse{id: "navbarSupportedContent"}
    %ul.navbar-nav.mr-auto
      %li.nav-item
        = link_to 'Home', root_path, class: 'nav-link'
      %li.nav-item
        = link_to 'About', about_path, class: 'nav-link'
      - unless logged_in?
        %li.nav-item
          = link_to 'Signup', signup_path, class: 'nav-link'

        %li.nav-item
          = link_to 'Login', login_path, class: 'nav-link'

    %ul.navbar-nav.ml-auto
      %li.nav-item
      - if logged_in?
        .dropdown
          %a.dropdown-toggle.btn{href:'#', id: 'dropdownMenuLink', 'role': 'button', 'data-toggle': 'dropdown', 'aria-haspopup': 'true', 'aria-expanded': 'false'}
            = image_tag 'user', class: 'profile-img'


          .dropdown-menu.dropdown-menu-right{'aria-labelledby': 'dropdownMenuLink'}
            = link_to 'Profile', profile_path, class: 'dropdown-item'
            = link_to 'logout', logout_path, method: :delete, class: 'dropdown-item'
